{% extends 'base.html.twig' %}

{% block title %}Modification du profil utilisateur{% endblock %}

{% block body %}
  <div class="container">
     <h1 class="my-5">Modification du profil</h1>

     {{ form_start(form) }}

     <div class="row">
        <div class="col">
           <div class="alert alert-light">
              <h2 class="alert-heading">Information générales</h2>
              <hr>
              {{ form_row(form.firstName) }}
              {{ form_row(form.lastName) }}
              {{ form_row(form.email) }}
              {{ form_row(form.picture) }}
           </div> {# fin div alert-light #}
        </div> {# fin div col premier #}
        <div class="col">
          <div class="alert alert-light">
          <h2 class="alert-heading">Détails</h2>
          <hr>
          {{ form_row(form.introduction) }}
          {{ form_row(form.description) }}

          <hr>
          <p>Si vous avez terminé vos modifications, vous pouvez les sauvegarder</p>
          
          <button type="sublit" class="btn btn-primary">
               <i class="fas fa-check"></i>
               Enregistre les modifications
          </button>
          
          </div> {# fin div alert-light second #}
        </div> {# fin div col second #}
     </div> {# fin div row #}

         {{ form_end(form) }}
     
  </div> {# fin div container #}
{% endblock %}
{% extends 'admin/base.html.twig' %}

{% block title %}Administration de réservations{% endblock %}

{% block body %}
 <div class="container-fluid">
     <h1 class="my-5">Administration de réservations</h1>
    <table class="table table-hover">
        <thead>
             <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Visiteur</th>
                <th>Annonce</th>
                <th>Durée</th>
                <th>Montant</th>
                <th></th>
             </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
               <td>{{booking.id}}</td>
               <td>{{booking.createdAt|date('d/m/Y H:i:s')}}</td>
               <td>
               <img src="{{booking.booker.picture}}" alt="Avatar" class="avatar avatar-micro">
               {{booking.booker.fullName}}
               </td>
               <td>{{booking.ad.title}}</td>
               <td>{{booking.ad.avgRatings}}</td>
               <td>{{booking.amount}}</td>
               <td>
                  <a href="#" class="btn btn-primary">
                     <i class="fas fa-pen"></i>
                  </a>
                  <a href="#" class="btn btn-danger">
                     <i class="fas fa-trash"></i>
                  </a>
               </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 </div> {# fin div container #}
{% endblock %}

